{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/firebase"],
    "types": ["jest", "node"]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
